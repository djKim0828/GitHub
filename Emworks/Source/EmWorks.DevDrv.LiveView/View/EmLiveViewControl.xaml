<UserControl x:Class="EmWorks.DevDrv.LiveView.EmLiveViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vlc ="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
             xmlns:local="clr-namespace:EmWorks.DevDrv.LiveView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="grdmain">
        <vlc:VlcControl x:Name="vlcPlayer"
                        Width="{Binding ActualWidth, ElementName=grdmain}"
                        Height="{Binding ActualHeight, ElementName=grdmain}"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
