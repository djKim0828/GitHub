<UserControl x:Class="EmWorks.View.ChartUV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmWorks.View"
             mc:Ignorable="d" 
             d:DesignWidth="452"
             d:DesignHeight="444">
    <Grid x:Name="grdMain" Width="452"
                   Height="444">
        <Image x:Name="imgBack" 
                   Width="452" 
                   Height="444"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"  
                   Stretch="Fill" 
                   Source="/EmWorks.App.OpticInspection;component/Resources/Images/Common/Chart/ChromaticityUV.PNG" >
            </Image>
        <Border x:Name="brdXY" BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Left" Width="394" Height="394" Margin="27,25,0,0" VerticalAlignment="Top" >
        </Border>
        <Ellipse x:Name="elPoint" Width="8" Height="8" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
