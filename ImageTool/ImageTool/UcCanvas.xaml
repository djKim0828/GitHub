<UserControl x:Class="ImageTool.UcCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImageTool"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid x:Name="grdMain" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{DynamicResource colorBgDialog}">
        <Grid x:Name="grdCanvas">
            <Canvas x:Name="cvsImage" />
            <Grid x:Name="grdAnno" />
        </Grid>
    </Grid>
</UserControl>